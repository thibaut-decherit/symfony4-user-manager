{{ form_start(form, {
    'action': path('email_change_request_ajax'),
    'attr': {
        'id': 'ajax-form-change-email',
        'class': 'col p-0 my-3'
    }
}) }}

{% include 'flash_alert/_alert.html.twig' with {
    'raw_message': true,
    'alert_type': 'email-change-request-success-raw',
    'alert_style': 'success',
    'text_align': 'center'
} %}

{% include 'flash_alert/_alert.html.twig' with {
    'alert_type': 'email-change-request-error',
    'alert_style': 'danger',
    'text_align': 'center'
} %}

<div class="form-group">
    {{ form_label(form.emailChangePending) }}
    {{ form_widget(form.emailChangePending) }}
</div>

<div class="form-group">
    <input
            class="btn btn-primary border-0 rounded-0 text-white" type="submit"
            value="{{ 'global.form.save_changes'|trans }}"
    />
</div>
{{ form_end(form) }}
