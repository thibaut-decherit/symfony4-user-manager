{{ form_start(form, {
    'action': path('password_change_ajax'),
    'attr': {
        'id': 'ajax-form-change-password',
        'class': 'col p-0 my-3 disable-on-submit'
    }
}) }}

{% include 'flash_alert/_alert.html.twig' with {
    'alert_type': 'password-change-success',
    'alert_style': 'success',
    'text_align': 'center'
} %}

<div class="form-group">
    {{ form_label(form.currentPassword) }}
    {{ form_widget(form.currentPassword) }}
</div>
<div class="form-group mb-0">
    {{ form_label(form.plainPassword.first) }}
    {{ form_widget(form.plainPassword.first) }}
    {% include 'components/_password_strength_meter.html.twig' %}
</div>
<div class="form-group">
    {{ form_label(form.plainPassword.second) }}
    {{ form_widget(form.plainPassword.second) }}
</div>

<div class="form-group">
    <button class="btn btn-primary border-0 rounded-0 text-white" type="submit">
        {{ 'global.form.change_password'|trans }}
    </button>
</div>
{{ form_end(form) }}
