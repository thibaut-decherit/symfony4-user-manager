{{ form_start(form, {
    'action': path('password_reset_ajax'),
    'attr': {
        'id': 'ajax-form-password-reset',
        'class': 'col p-0 my-3 disable-on-submit'
    }
}) }}

{{ form_row(form.passwordResetToken) }}

<div class="form-group">
    {{ form_label(form.plainPassword.first) }}
    {{ form_widget(form.plainPassword.first) }}
    {% include 'components/_password_strength_meter.html.twig' %}
</div>
<div class="form-group">
    {{ form_label(form.plainPassword.second) }}
    {{ form_widget(form.plainPassword.second) }}
</div>

<div class="form-group">
    <button class="btn btn-primary border-0 btn-block rounded-0 text-white" type="submit">
        {{ 'global.form.submit'|trans }}
    </button>
</div>
{{ form_end(form) }}
