{{ form_start(form, {
    'action': path('password_change_ajax'),
    'attr': {
        'id': 'ajax-form-change-password',
        'class': 'col p-0 my-3'
    }
}) }}

{% include ':FlashAlert:flash-alert.html.twig' with {
    'alertType': 'password-change-success',
    'alertStyle': 'success',
    'textAlign': 'center'
} %}

<div class="form-group">
    {{ form_label(form.currentPassword) }}
    {{ form_widget(form.currentPassword) }}
</div>
<div class="form-group mb-0">
    {{ form_label(form.plainPassword.first) }}
    {{ form_widget(form.plainPassword.first) }}
    {% include ':Component:password-strength-meter.html.twig' %}
</div>
<div class="form-group">
    {{ form_label(form.plainPassword.second) }}
    {{ form_widget(form.plainPassword.second) }}
</div>

<div class="form-group">
    <input
            class="btn btn-primary border-0 rounded-0 text-white" type="submit"
            value="{{ 'global.form.change_password'|trans }}"
    />
</div>
{{ form_end(form) }}
