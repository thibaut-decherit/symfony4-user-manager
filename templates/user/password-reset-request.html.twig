{% extends 'base.html.twig' %}

{% set page_title = 'page_title.password_reset'|trans %}


{% block body %}
    {% include ':FlashAlert:flash-alert.html.twig' with {
        'alertType': 'password-reset-error',
        'alertStyle': 'danger',
        'textAlign': 'center'
    } %}
    {% include ':FlashAlert:flash-alert.html.twig' with {
        'alertType': 'password-reset-request-success',
        'alertStyle': 'success',
        'textAlign': 'center'
    } %}

    <div class="row">
        <h1 class="col">{{ 'page_title.password_reset'|trans }}</h1>
    </div>

    <div class="row mb-3">
        <div class="col">
            <a href="{{ path('home') }}">{{ 'page_title.home'|trans }}</a>
        </div>
    </div>

    {% include ':Form/User:password-reset-request.html.twig' %}
{% endblock %}
