{% extends '_base.html.twig' %}

{% set page_title = 'page_title.email_address_change'|trans %}

{% block body %}
    <div class="row">
        <h1 class="col">{{ 'page_title.email_address_change'|trans }}</h1>
    </div>

    <div class="row mb-3">
        <div class="col">
            <p>
                {{ 'user.email_address_change_confirm_instructions'|trans({
                    '{{ old_email }}':
                        '<span class="font-weight-bold">'
                            ~ user.email|escape
                        ~ '</span>',
                    '{{ new_email }}':
                        '<span class="font-weight-bold">'
                            ~ user.emailChangePending|escape
                        ~ '</span>'
                })|raw }}
            </p>
        </div>
    </div>
    <div class="row">
        <div class="col d-flex justify-content-center">
            {{ include('form/user/button/_email_change_cancel.html.twig') }}
            {{ include('form/user/button/_email_change_confirm.html.twig') }}
        </div>
    </div>

{% endblock %}
