{% extends '_base.html.twig' %}

{% set page_title = 'page_title.login'|trans %}

{% block body %}
    <div class="row">
        <h1 class="col">{{ 'page_title.login'|trans }}</h1>
    </div>

    <div class="row mb-3">
        <div class="col">
            <a href="{{ path('home') }}">{{ 'page_title.home'|trans }}</a>
        </div>
    </div>

    <div class="alert alert-danger mb-3 text-center d-none" id="login-error-alert"></div>

    {% include 'flash_alert/_alert.html.twig' with {
        'alert_type': 'account-activation-success',
        'alert_id': 'login-flash-alert',
        'alert_style': 'success',
        'text_align': 'center'
    } %}

    {% include 'flash_alert/_alert.html.twig' with {
        'alert_type': 'password-reset-success',
        'alert_id': 'login-flash-alert',
        'alert_style': 'success',
        'text_align': 'center'
    } %}

    {% include 'flash_alert/_alert.html.twig' with {
        'alert_type': 'login-required-error',
        'alert_id': 'login-flash-alert',
        'alert_style': 'danger',
        'text_align': 'center'
    } %}

    {% include 'form/user/_login.html.twig' %}
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    {{ encore_entry_script_tags('login') }}
{% endblock %}
