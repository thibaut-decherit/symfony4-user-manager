{% extends '_base.html.twig' %}

{% set page_title = 'page_title.password_reset'|trans %}


{% block body %}
    {% include 'flash_alert/_alert.html.twig' with {
        'alert_type': 'password-reset-error',
        'alert_style': 'danger',
        'text_align': 'center'
    } %}
    {% include 'flash_alert/_alert.html.twig' with {
        'alert_type': 'password-reset-request-success',
        'alert_style': 'success',
        'text_align': 'center'
    } %}

    <div class="row">
        <h1 class="col">{{ 'page_title.password_reset'|trans }}</h1>
    </div>

    <div class="row mb-3">
        <div class="col">
            <a href="{{ path('home') }}">{{ 'page_title.home'|trans }}</a>
        </div>
    </div>

    {% include 'form/user/_password_reset_request.html.twig' %}
{% endblock %}
